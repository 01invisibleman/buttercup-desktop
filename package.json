{
  "name": "buttercup",
  "productName": "Buttercup",
  "version": "0.10.2",
  "description": "Free and Open Source password vault",
  "main": "app/main.js",
  "scripts": {
    "test": "ava",
    "build:main": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.electron --progress --colors",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.production --progress --colors",
    "build": "npm run build:main && npm run build:renderer",
    "start": "concurrently --kill-others \"npm run start:renderer\" \"npm run start:main\"",
    "start:renderer": "webpack-dev-server --config ./config/webpack.config.development --progress",
    "start:main": "cross-env HOT=1 BABEL_ENV=node NODE_ENV=development electron -r babel-register ./src/main/app",
    "release:linux": "build --linux --x64",
    "release:mac": "build --mac",
    "release:win": "build --win --x64",
    "release": "build --mac --linux --win --x64",
    "release:current": "build"
  },
  "build": {
    "appId": "pw.buttercup.desktop",
    "copyright": "Copyright Â© 2015-2017 Buttercup and Contributors",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "./build/background@2x.png",
      "contents": [
        {
          "x": 396,
          "y": 345,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 396,
          "y": 110,
          "type": "file"
        }
      ],
      "window": {
        "width": 660,
        "height": 480
      }
    },
    "linux": {
      "target": [
        "rpm",
        "AppImage",
        "deb"
      ],
      "packageCategory": "utils",
      "synopsis": "Free and Open Source Password Vault"
    },
    "fileAssociations": {
      "ext": "bcup",
      "name": "Buttercup Archive",
      "icon": "./build/icon.icns"
    }
  },
  "directories": {
    "output": "release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup-pw/buttercup.git"
  },
  "keywords": [
    "password",
    "vault",
    "manager",
    "credentials"
  ],
  "author": "Buttercup <info@buttercup.pw>",
  "contributors": [
    {
      "name": "Perry Mitchell",
      "email": "perry@perrymitchell.net"
    },
    {
      "name": "Sallar Kaboli",
      "email": "sallar.kaboli@gmail.com"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/buttercup-pw/buttercup/issues"
  },
  "homepage": "https://buttercup.pw",
  "dependencies": {},
  "devDependencies": {
    "@types/electron": "^1.4.29",
    "@types/node": "^6.0.45",
    "@types/react": "^0.14.41",
    "@types/redux": "^3.6.31",
    "ava": "^0.17.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-plugin-transform-remove-debugger": "^6.8.0",
    "babel-plugin-transform-strict-mode": "^6.22.0",
    "babel-plugin-webpack-loaders": "^0.8.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-register": "^6.18.0",
    "babili-webpack-plugin": "^0.0.8",
    "buttercup-importer": "~0.7.0",
    "buttercup-ui": "^0.3.1",
    "buttercup-web": "~0.23.0",
    "classnames": "^2.2.5",
    "concurrently": "^2.1.0",
    "cross-env": "^1.0.8",
    "css-loader": "^0.25.0",
    "deep-assign": "^2.0.0",
    "del": "^2.2.1",
    "electron": "1.5.0",
    "electron-builder": "^10.6.1",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "2.0.1",
    "electron-installer-dmg": "^0.1.2",
    "electron-rpc": "^2.0.1",
    "eslint": "^3.15.0",
    "eslint-config-xo-react": "^0.8.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^5.2.2",
    "extract-text-webpack-plugin": "2.0.0-rc.0",
    "file-loader": "^0.9.0",
    "fs-extra": "^0.30.0",
    "fuse.js": "^2.5.0",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.7.0",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-jade": "^0.15.0",
    "grunt-contrib-nodeunit": "^0.4.1",
    "grunt-contrib-watch": "^0.6.1",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "load-grunt-tasks": "^3.3.0",
    "lodash": "^4.16.6",
    "makedeb": "0.0.4",
    "minimist": "^1.2.0",
    "ms": "^0.7.2",
    "node-sass": "^3.10.1",
    "raw-loader": "^0.5.1",
    "rc-tree": "^1.3.9",
    "react": "^15.4.0",
    "react-addons-test-utils": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-hot-loader": "3.0.0-beta.6",
    "react-icons": "^2.2.1",
    "react-redux": "^4.4.6",
    "react-split-pane": "^0.1.51",
    "redux": "^3.5.2",
    "redux-form": "^6.4.3",
    "redux-persist": "^3.1.1",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.3",
    "sass-loader": "^4.0.2",
    "spectron": "^3.5.0",
    "style-loader": "^0.13.1",
    "sweetalert2": "^5.3.8",
    "url-loader": "^0.5.7",
    "uuid": "^2.0.3",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-merge": "^2.6.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser",
      "ava",
      "electron"
    ],
    "ignores": [
      "**/Gruntfile.js",
      "tools/**",
      "release/**",
      "app/**"
    ],
    "globals": [
      "Buttercup"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./config/webpack.config.production.js"
        }
      }
    },
    "rules": {
      "no-unused-expressions": "off",
      "space-before-function-paren": "off",
      "quote-props": "off",
      "no-use-before-define": "off",
      "no-trailing-spaces": "off",
      "xo/filename-case": "off",
      "react/jsx-no-bind": "off",
      "babel/new-cap": "off",
      "object-curly-spacing": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "import/extensions": "off",
      "import/no-unassigned-import": "off"
    }
  }
}
