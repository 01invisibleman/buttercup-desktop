{
  "name": "buttercup-app",
  "productName": "Buttercup",
  "version": "0.2.0",
  "description": "Buttercup password manager.",
  "main": "dist/main.js",
  "scripts": {
    "test": "xo",
    "build-main": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config tools/webpack.config.electron --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config tools/webpack.config.production --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "dev": "concurrently --kill-others \"npm run hot-server\" \"npm run start-hot\"",
    "hot-server": "node -r babel-register ./tools/server.js",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./src/main/app",
    "package": "cross-env NODE_ENV=production node -r babel-register -r babel-polyfill tools/package.js",
    "package-all": "npm run package -- --all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup-pw/buttercup.git"
  },
  "keywords": [
    "password",
    "vault",
    "manager",
    "credentials"
  ],
  "author": "Sallar Kaboli <sallar.kaboli@gmail.com>",
  "contributors": [
    {
      "name": "Perry Mitchell",
      "email": "perry@perrymitchell.net"
    },
    {
      "name": "Sallar Kaboli",
      "email": "sallar.kaboli@gmail.com"
    }
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/buttercup-pw/buttercup/issues"
  },
  "homepage": "https://github.com/buttercup-pw/buttercup#readme",
  "dependencies": {
    "buttercup-web": "^0.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-plugin-transform-remove-debugger": "^6.8.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "concurrently": "^2.1.0",
    "cross-env": "^1.0.8",
    "css-loader": "^0.25.0",
    "del": "^2.2.1",
    "electron-builder": "^2.6.0",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "2.0.1",
    "electron-installer-dmg": "^0.1.0",
    "electron-packager": "^5.2.0",
    "electron-prebuilt": "^1.4.2",
    "electron-winstaller": "^2.3.1",
    "eslint-config-xo-react": "^0.8.0",
    "eslint-plugin-react": "^5.2.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fs-extra": "^0.30.0",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.7.0",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-jade": "^0.15.0",
    "grunt-contrib-nodeunit": "^0.4.1",
    "grunt-contrib-watch": "^0.6.1",
    "json-loader": "^0.5.4",
    "load-grunt-tasks": "^3.3.0",
    "makedeb": "0.0.4",
    "minimist": "^1.2.0",
    "raw-loader": "^0.5.1",
    "react": "^15.3.2",
    "react-dom": "^15.2.0",
    "react-hot-loader": "^1.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "redux": "^3.5.2",
    "redux-persist": "^3.1.1",
    "rc-tree": "^1.3.9",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.3",
    "style-loader": "^0.13.1",
    "time-grunt": "^1.3.0",
    "webpack": "^1.13.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.12.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "extends": "xo-react",
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "**/Gruntfile.js",
      "tools/**",
      "release/**"
    ],
    "globals": [
      "Buttercup"
    ],
    "rules": {
      "space-before-function-paren": "off",
      "no-trailing-spaces": "off",
      "xo/filename-case": "off",
      "react/jsx-no-bind": "off",
      "babel/object-curly-spacing": "off",
      "import/no-extraneous-dependencies": "off",
      "yield-star-spacing": [
        "error",
        {
          "before": true,
          "after": false
        }
      ],
      "babel/generator-star-spacing": [
        "error",
        {
          "before": true,
          "after": false
        }
      ]
    }
  }
}
